.uni-form-item .title {
        width: 100px;
		padding-left: 20px;
}
.uni-form-item input {
		height: 56px;
		font-size: 14px;
		width: -webkit-fill-available;
		border-bottom: 1px solid rgba(0, 0, 0, 0.09);
}
.uni-form-item .uni-input-placeholder {
		color: rgba(0, 0, 0, 0.26)
}
.distribution-footer {
		position: absolute;
		bottom: 0;
		width: 100%;
		z-index: 1000;
}
.distribution-footer-save {
		background: #ffffff;
		padding: 12px;
}
.distribution-footer-save-button {
		background: #EE5B2D;
		color: #ffffff;
		height: 42px;
		-webkit-border-radius: 4px;
		        border-radius: 4px;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
